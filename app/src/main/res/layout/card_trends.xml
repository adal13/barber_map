                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textAlignment="center"
                        android:textColor="@color/WhiteOrBlack"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>
