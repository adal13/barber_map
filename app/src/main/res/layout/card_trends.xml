<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_trends"
    android:layout_margin="9dp">

    <GridLayout
        android:id="@+id/id_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        card_view:columnCount="2"
        card_view:rowCount="2">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_trends"
            android:layout_margin="9dp"
            android:background="@drawable/button_rounded"
            android:backgroundTint="@color/lavender"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="6dp"
            card_view:contentPadding="25dp">

            <ImageView
                android:id="@+id/hairs_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="@+id/hairs_nombre"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="16dp"
                android:contentDescription="TODO"
                card_view:layout_column="0"
                card_view:layout_row="0" />

            <TextView
                android:id="@+id/hairs_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="@+id/hairs_img"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="@color/WhiteOrBlack"
                android:textSize="30sp"
                android:textStyle="bold"
                card_view:layout_column="0"
                card_view:layout_row="2" />
        </androidx.cardview.widget.CardView>

    </GridLayout>

</RelativeLayout>