<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reservation_files"
    tools:context=".ui.fragment.bottomnavigation.reservation_files.ReservationFilesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona Tu fecha"
                android:textSize="25dp"
                />


            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:hint="Seleccionar dÃ­a"
                android:clickable="false"
                android:focusable="false"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/id_seleccionaBarbera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona Barbero"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/espacioDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espacio Disponible"
                android:textSize="25dp"
                />

            <Button
                android:id="@+id/btn_cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agendar"
                android:textColor="@color/white"
                android:textSize="20dp"

                />

        </LinearLayout>

    </ScrollView>

</FrameLayout>