<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_views"
    android:layout_margin="9dp"
    card_view:cardBackgroundColor="@color/lavender"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">
<!--
    android:background="@color/cardview_shadow_end_color"
-->


    <RelativeLayout
        android:id="@+id/id_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo_local"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/logo_local"
            android:layout_toRightOf="@+id/logo_local"
            android:text="Nombre"
            android:textColor="@color/WhiteOrBlack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre"
            android:layout_toEndOf="@+id/logo_local"
            android:layout_toRightOf="@+id/logo_local"
            android:text="Estado:"
            android:textColor="@color/WhiteOrBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/municipio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/estado"
            android:layout_toEndOf="@+id/logo_local"
            android:layout_toRightOf="@+id/logo_local"
            android:text="Municipio:"
            android:textColor="@color/WhiteOrBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/municipio"
            android:layout_toEndOf="@+id/logo_local"
            android:layout_toRightOf="@+id/logo_local"
            android:text="Calle:"
            android:textColor="@color/WhiteOrBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/calle"
            android:layout_toEndOf="@+id/logo_local"
            android:layout_toRightOf="@+id/logo_local"
            android:text="Ubicacion:"
            android:textColor="@color/WhiteOrBlack"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

